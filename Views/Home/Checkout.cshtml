@model OnlineBookstore.ViewModels.CheckoutVm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Checkout";
    var cart = OnlineBookstore.Models.ShoppingCart.GetCart(Context.Session);
    var total = cart.Sum(i => i.Price * i.Quantity);
}

<h2>Checkout</h2>

@if (!cart.Any())
{
    <div class="alert alert-info">Your cart is empty.</div>
}
else
{
    <form asp-action="Checkout" method="post" class="row g-3">
        @Html.AntiForgeryToken()

        <div class="col-12">
            <label class="form-label">Payment</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" id="pmCash" name="PaymentMethod" value="Cash" checked />
                <label class="form-check-label" for="pmCash">Cash on delivery</label>
            </div>
        </div>

        <div class="col-md-6">
            <label asp-for="FullName" class="form-label"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Phone" class="form-label"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="City" class="form-label"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="PostalCode" class="form-label"></label>
            <input asp-for="PostalCode" class="form-control" />
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>

        <div class="col-12">
            <div class="alert alert-secondary mb-0">
                <strong>Total:</strong> @total.ToString("C")
            </div>
        </div>

        <div class="col-12 d-flex gap-2">
            <button type="submit" class="btn btn-primary">Place order</button>
            <a asp-action="Cart" class="btn btn-outline-secondary">Back to cart</a>
        </div>

        <div class="col-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
    </form>

    <hr />

    <h5>Your items</h5>
    <ul>
        @foreach (var i in cart)
        {
            <li>@i.BookTitle × @i.Quantity — @((i.Price * i.Quantity).ToString("C"))</li>
        }
    </ul>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
