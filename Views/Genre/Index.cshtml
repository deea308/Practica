@model IEnumerable<OnlineBookStore_Entities.Genre>

<h1>Genres</h1>

@if (!(Model?.Any() ?? false))
{
    <p>No genres.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Books</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var g in Model!)
            {
                <tr>
                    <td>@g.Name</td>
                    <td>@(g.Books?.Count ?? 0)</td>
                    <td>
                        <a asp-action="Details"
                           asp-route-id="@g.GenreId"
                           class="btn btn-sm btn-outline-primary">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
