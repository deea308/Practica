@model IEnumerable<OnlineBookstore.ViewModels.PublisherListItemVm>

<h1>Publishers</h1>

@if (!(Model?.Any() ?? false))
{
    <p>No publishers.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Books</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model!)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.BookCount</td>
                    <td>
                        <a asp-action="Details"
                           asp-route-id="@p.PublisherId"
                           class="btn btn-sm btn-outline-primary">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
