@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Login";
    var returnUrl = ViewBag.ReturnUrl as string;
}

<div class="row justify-content-center">
    <div class="col-12 col-md-7 col-lg-5">
        <h2 class="mb-3 text-center">Welcome back</h2>

        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <form asp-action="Login" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="returnUrl" value="@returnUrl" />

                    <div class="mb-3">
                        <label class="form-label">Username or Email</label>
                        <input name="username" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input name="password" type="password" class="form-control" required />
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Log in</button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Continue as guest</a>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="text-danger mt-3">
                            @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@err.ErrorMessage</div>
                            }
                        </div>
                    }
                </form>
            </div>
        </div>

        <div class="text-center text-muted my-2">— Don’t have an account? —</div>

        <div class="card shadow-sm">
            <div class="card-body text-center">
                <p class="mb-2">Create one in seconds and start shopping.</p>
                <a asp-controller="Account" asp-action="Register" asp-route-returnUrl="@returnUrl"
                   class="btn btn-outline-primary">Create account</a>
            </div>
        </div>
    </div>
</div>
