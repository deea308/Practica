@model IEnumerable<OnlineBookStore_Entities.Review>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Reviews</h1>

@if (!(Model?.Any() ?? false))
{
    <p>No reviews.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Book</th>
                <th>User</th>
                <th>Rating</th>
                <th>Content</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Book?.Title</td>
                    <td>@r.User?.Username</td>
                    <td>@r.Rating</td>
                    <td>@r.Content</td>
                </tr>
            }
        </tbody>
    </table>
}
