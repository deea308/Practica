
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineBookstore</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theme-pinkpurple.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-dark" style="background:linear-gradient(90deg,#ff6bb5,#8c3bbf);">
        <div class="container-xxl">
            <a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">OnlineBookstore</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="mainNav" class="collapse navbar-collapse">
                <!-- LEFT -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 align-items-lg-center">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a></li>

                    @* Admin links inline *@
                    @if (User.HasClaim("IsAdmin", "true"))
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Book" asp-action="Index">Books</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Author" asp-action="Index">Authors</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Genre" asp-action="Index">Genres</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Publisher" asp-action="Index">Publishers</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Reviews" asp-action="Index">Reviews</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Index">Users</a></li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Orders" asp-action="Index">Orders</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link fw-semibold" asp-controller="Book" asp-action="Create">Create Book</a>
                        </li>
                    }
                </ul>

                <!-- RIGHT -->
                <ul class="navbar-nav ms-auto align-items-lg-center">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item">
                            <a class="nav-link position-relative" asp-controller="Home" asp-action="Cart">
                                Cart
                                @if (ViewBag.CartCount != null)
                                {
                                    <span class="badge bg-light text-dark ms-1">@ViewBag.CartCount</span>
                                }
                            </a>
                        </li>
                        <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Profile">My Profile</a></li>
                        <li class="nav-item">
                            <span class="nav-link">Hello, @User.Identity!.Name</span>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button class="nav-link btn btn-link p-0 ms-lg-2" type="submit">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register">Register</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    
    <partial name="_Flash" />

    <main role="main" class="container-xxl py-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted mt-auto">
        <div class="container-xxl py-2">
            &copy; @DateTime.UtcNow.Year - OnlineBookstore -
            <a class="link-secondary" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
